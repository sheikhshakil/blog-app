<!-- header -->
<%- include('../../partials/header.ejs') %>
<!-- navbar -->
<%- include('../../partials/navbar.ejs') %>

<!-- name, username, enamil, password -->
<!-- signup form -->
<div class="container pt-3 pb-3">
    <div class="col-md-6 m-auto signup">
        <h4 class="text-center mb-3">Create an Account</h4>
        <!-- signup form -->
        <form method="POST" action="/auth/signup">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control <%= errors.name ? 'is-invalid' : '' %> " id="name" name="name" value="<%= values.name ? values.name : '' %>">
                <!-- invalid reason -->
                <div class="invalid-feedback">
                    <%= errors.name %>
                </div>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control <%= errors.username ? 'is-invalid' : '' %> " id="username" name="username" value="<%= values.username ? values.username : '' %>" >
                <div class="invalid-feedback">
                    <%= errors.username %>
                </div>
                <small class="form-text text-muted">Username must be unique. Use combinations of letters and
                    numbers</small>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control <%= errors.email ? 'is-invalid' : '' %> " id="email"
                    name="email" value="<%= values.email ? values.email : '' %>">
                <div class="invalid-feedback">
                    <%= errors.email %>
                </div>
                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control <%= errors.password ? 'is-invalid' : '' %> " id="password" name="password" value="<%= values.password ? values.password : '' %>">
                <div class="invalid-feedback">
                    <%= errors.password %>
                </div>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control <%= errors.confirmPassword ? 'is-invalid' : '' %> "
                    id="confirmPassword" name="confirmPassword"  value="<%= values.confirmPassword ? values.confirmPassword : '' %>">
                <div class="invalid-feedback">
                    <%= errors.confirmPassword %>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

<!-- footer -->
<%- include('../../partials/footer.ejs') %>